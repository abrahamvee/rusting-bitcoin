{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Current Rust File",
            "type": "lldb",
            "request": "launch",
            "${fileDirname}/../Cargo.toml"
            "program": "${fileDirname}/../target/debug/${fileBasenameNoExtension}.exe",
            "args": [],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "cargo build current",
            "console": "integratedTerminal",
            "stopOnEntry": false,
            "sourceLanguages": ["rust"]
        }
    ]
}
